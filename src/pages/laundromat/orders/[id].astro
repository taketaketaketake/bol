---
import { requireRole } from '../../../utils/require-role';
import { getLaundromatOrderDetails } from '../../../utils/dashboard/laundromat-orders';

// Authenticate as laundromat staff or admin
const { user, roles } = await requireRole(Astro.cookies, ['laundromat_staff', 'admin']);

const orderId = Astro.params.id;
if (!orderId) {
  return new Response('Order ID required', { status: 400 });
}

const orderDetails = await getLaundromatOrderDetails(orderId, user.id);

if (!orderDetails.order) {
  return Astro.redirect('/laundromat/dashboard?error=order_not_found');
}

const { order, customer, address, laundromat, statusHistory } = orderDetails;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order #{order.id.slice(-8)} - {laundromat.name}</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <div>
          <a href="/laundromat/dashboard" class="text-blue-600 hover:text-blue-800 text-sm">‚Üê Back to Dashboard</a>
          <h1 class="text-2xl font-bold text-gray-900">Order #{order.id.slice(-8)}</h1>
          <p class="text-sm text-gray-600">Detailed Order Management</p>
        </div>
        <div class="text-sm">
          <span class={`px-3 py-1 rounded-full text-xs font-medium ${getStatusColor(order.status)}`}>
            {order.status.replace('_', ' ').toUpperCase()}
          </span>
        </div>
      </div>
    </div>
  </header>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Order Details -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Customer Information -->
        <div class="bg-white rounded-lg shadow-sm border p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Customer Information</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-600">Name</label>
              <div class="text-gray-900">{customer?.full_name || 'Guest Customer'}</div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-600">Email</label>
              <div class="text-gray-900">{customer?.email || 'N/A'}</div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-600">Phone</label>
              <div class="text-gray-900">
                {customer?.phone ? (
                  <a href={`tel:${customer.phone}`} class="text-blue-600 hover:text-blue-800">
                    {customer.phone}
                  </a>
                ) : 'N/A'}
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-600">SMS Notifications</label>
              <div class="text-gray-900">{customer?.sms_opt_in ? 'Enabled' : 'Disabled'}</div>
            </div>
          </div>
        </div>

        <!-- Service Details -->
        <div class="bg-white rounded-lg shadow-sm border p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Service Details</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-600">Service Type</label>
              <div class="text-gray-900 capitalize">{order.service_type?.replace('_', ' ') || 'Standard'}</div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-600">Plan Type</label>
              <div class="text-gray-900 capitalize">{order.plan_type?.replace('_', ' ') || 'Pay Per Load'}</div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-600">Pickup Date</label>
              <div class="text-gray-900">{order.pickup_date}</div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-600">Delivery Date</label>
              <div class="text-gray-900">{order.delivery_date || 'Same day'}</div>
            </div>
            {order.measured_weight_lb && (
              <div>
                <label class="block text-sm font-medium text-gray-600">Measured Weight</label>
                <div class="text-gray-900">{order.measured_weight_lb} lbs</div>
              </div>
            )}
            {order.notes && (
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-600">Customer Notes</label>
                <div class="text-gray-900 mt-1">{order.notes}</div>
              </div>
            )}
          </div>
        </div>

        <!-- Address Information -->
        <div class="bg-white rounded-lg shadow-sm border p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Pickup/Delivery Address</h3>
          <div class="text-gray-900">
            {address?.line1}<br>
            {address?.line2 && (
              <>
                {address.line2}<br>
              </>
            )}
            {address?.city}, {address?.state} {address?.postal_code}
          </div>
          {address && (
            <a 
              href={`https://maps.google.com/?q=${encodeURIComponent(`${address.line1} ${address.city} ${address.state}`)}`}
              target="_blank"
              class="text-blue-600 hover:text-blue-800 text-sm mt-2 inline-block"
            >
              Open in Google Maps ‚Üí
            </a>
          )}
        </div>

        <!-- Customer Communication -->
        <div class="bg-white rounded-lg shadow-sm border p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Customer Communication</h3>
          
          <!-- Quick Actions -->
          <div class="grid grid-cols-2 gap-4 mb-4">
            {customer?.phone && (
              <button 
                onclick={`callCustomer('${customer.phone}')`}
                class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 flex items-center justify-center"
              >
                üìû Call Customer
              </button>
            )}
            {customer?.sms_opt_in && customer?.phone && (
              <button 
                onclick={`sendSMS('${customer.phone}', '${order.id}')`}
                class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 flex items-center justify-center"
              >
                üí¨ Send SMS
              </button>
            )}
          </div>

          <!-- Message Templates -->
          <div class="space-y-2">
            <h4 class="text-sm font-medium text-gray-700">Quick Message Templates:</h4>
            <div class="grid grid-cols-1 gap-2">
              <button 
                onclick={`sendQuickMessage('pickup_reminder')`}
                class="text-left px-3 py-2 bg-gray-100 hover:bg-gray-200 rounded text-sm"
              >
                "We're on our way to pick up your laundry"
              </button>
              <button 
                onclick={`sendQuickMessage('processing_complete')`}
                class="text-left px-3 py-2 bg-gray-100 hover:bg-gray-200 rounded text-sm"
              >
                "Your laundry is clean and ready for delivery"
              </button>
              <button 
                onclick={`sendQuickMessage('delivery_eta')`}
                class="text-left px-3 py-2 bg-gray-100 hover:bg-gray-200 rounded text-sm"
              >
                "We'll deliver your clean laundry within 2 hours"
              </button>
            </div>
          </div>

          <!-- Custom Message -->
          <div class="mt-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">Custom Message</label>
            <textarea 
              id="customMessage"
              rows="3"
              class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm"
              placeholder="Type a custom message to the customer..."
            ></textarea>
            <button 
              onclick="sendCustomMessage()"
              class="mt-2 bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 text-sm"
            >
              Send Custom Message
            </button>
          </div>
        </div>
      </div>

      <!-- Status & Actions Sidebar -->
      <div class="space-y-6">
        <!-- Status Management -->
        <div class="bg-white rounded-lg shadow-sm border p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Status Management</h3>
          
          <div class="space-y-3">
            {getStatusActions(order.status).map((action) => (
              <button 
                onclick={`updateOrderStatus('${order.id}', '${action.status}')`}
                class={`w-full px-4 py-2 rounded text-sm font-medium ${action.buttonClass}`}
              >
                {action.label}
              </button>
            ))}
          </div>

          {order.status === 'processing' && (
            <div class="mt-4 pt-4 border-t border-gray-200">
              <label class="block text-sm font-medium text-gray-700 mb-2">Update Weight</label>
              <div class="flex space-x-2">
                <input 
                  type="number" 
                  step="0.1"
                  id="weightInput"
                  value={order.measured_weight_lb || ''}
                  class="flex-1 border border-gray-300 rounded-md px-3 py-2 text-sm"
                  placeholder="Weight in lbs"
                >
                <button 
                  onclick={`updateWeight('${order.id}')`}
                  class="bg-gray-600 text-white px-3 py-2 rounded text-sm hover:bg-gray-700"
                >
                  Update
                </button>
              </div>
            </div>
          )}
        </div>

        <!-- Status History -->
        <div class="bg-white rounded-lg shadow-sm border p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Status History</h3>
          <div class="space-y-3">
            {statusHistory.map((entry) => (
              <div class="border-l-4 border-blue-500 pl-3">
                <div class="text-sm font-medium text-gray-900">
                  {entry.status.replace('_', ' ').toUpperCase()}
                </div>
                <div class="text-xs text-gray-600">
                  {new Date(entry.changed_at).toLocaleString()}
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Order Photos -->
        <div class="bg-white rounded-lg shadow-sm border p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Order Photos</h3>
          <div class="space-y-3">
            {order.pickup_photo && (
              <div>
                <label class="block text-sm font-medium text-gray-600">Pickup Photo</label>
                <img src={order.pickup_photo} alt="Pickup photo" class="w-full rounded-md mt-1">
              </div>
            )}
            {order.laundry_photo && (
              <div>
                <label class="block text-sm font-medium text-gray-600">Processing Photo</label>
                <img src={order.laundry_photo} alt="Laundry photo" class="w-full rounded-md mt-1">
              </div>
            )}
            {order.delivery_photo && (
              <div>
                <label class="block text-sm font-medium text-gray-600">Delivery Photo</label>
                <img src={order.delivery_photo} alt="Delivery photo" class="w-full rounded-md mt-1">
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function callCustomer(phone) {
      window.open(`tel:${phone}`, '_self');
    }

    async function sendSMS(phone, orderId) {
      // TODO: Implement SMS sending
      alert(`SMS feature coming soon! Would send to ${phone}`);
    }

    async function sendQuickMessage(template) {
      // TODO: Implement quick message templates
      alert(`Would send ${template} message`);
    }

    async function sendCustomMessage() {
      const message = document.getElementById('customMessage').value;
      if (!message.trim()) {
        alert('Please enter a message');
        return;
      }
      // TODO: Implement custom message sending
      alert(`Would send: "${message}"`);
      document.getElementById('customMessage').value = '';
    }

    async function updateOrderStatus(orderId, newStatus) {
      try {
        const response = await fetch(`/api/laundromat/orders/${orderId}/status`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ status: newStatus })
        });

        if (response.ok) {
          location.reload();
        } else {
          const error = await response.json();
          alert(`Error: ${error.message}`);
        }
      } catch (error) {
        alert(`Error: ${error.message}`);
      }
    }

    async function updateWeight(orderId) {
      const weight = document.getElementById('weightInput').value;
      if (!weight || isNaN(weight) || parseFloat(weight) <= 0) {
        alert('Please enter a valid weight');
        return;
      }

      try {
        const response = await fetch(`/api/laundromat/orders/${orderId}/weight`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ weight: parseFloat(weight) })
        });

        if (response.ok) {
          location.reload();
        } else {
          const error = await response.json();
          alert(`Error: ${error.message}`);
        }
      } catch (error) {
        alert(`Error: ${error.message}`);
      }
    }
  </script>
</body>
</html>

{/* Helper functions */}
<script define:vars={{getStatusColor, getStatusActions}}>
  function getStatusColor(status) {
    switch (status) {
      case 'scheduled': return 'bg-yellow-100 text-yellow-800';
      case 'en_route_pickup': return 'bg-blue-100 text-blue-800';
      case 'picked_up': return 'bg-purple-100 text-purple-800';
      case 'processing': return 'bg-orange-100 text-orange-800';
      case 'ready_for_delivery': return 'bg-green-100 text-green-800';
      case 'en_route_delivery': return 'bg-blue-100 text-blue-800';
      case 'delivered': return 'bg-green-100 text-green-800';
      case 'completed': return 'bg-gray-100 text-gray-800';
      default: return 'bg-gray-100 text-gray-800';
    }
  }

  function getStatusActions(currentStatus) {
    const actions = [];
    
    switch (currentStatus) {
      case 'scheduled':
        actions.push({
          status: 'en_route_pickup',
          label: 'Start Pickup Route',
          buttonClass: 'bg-blue-600 text-white hover:bg-blue-700'
        });
        break;
      case 'en_route_pickup':
        actions.push({
          status: 'picked_up',
          label: 'Mark Picked Up',
          buttonClass: 'bg-purple-600 text-white hover:bg-purple-700'
        });
        break;
      case 'picked_up':
        actions.push({
          status: 'processing',
          label: 'Start Processing',
          buttonClass: 'bg-orange-600 text-white hover:bg-orange-700'
        });
        break;
      case 'processing':
        actions.push({
          status: 'ready_for_delivery',
          label: 'Mark Ready for Delivery',
          buttonClass: 'bg-green-600 text-white hover:bg-green-700'
        });
        break;
      case 'ready_for_delivery':
        actions.push({
          status: 'en_route_delivery',
          label: 'Start Delivery Route',
          buttonClass: 'bg-blue-600 text-white hover:bg-blue-700'
        });
        break;
      case 'en_route_delivery':
        actions.push({
          status: 'delivered',
          label: 'Mark Delivered',
          buttonClass: 'bg-green-600 text-white hover:bg-green-700'
        });
        break;
      case 'delivered':
        actions.push({
          status: 'completed',
          label: 'Complete Order',
          buttonClass: 'bg-gray-600 text-white hover:bg-gray-700'
        });
        break;
    }

    return actions;
  }
</script>