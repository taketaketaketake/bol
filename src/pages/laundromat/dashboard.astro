---
import Layout from '../../layout/Layout.astro';
import type { Order, Laundromat } from '../../db/schema';
import { getLaundromatOperationsData } from '../../utils/dashboard/laundromat';
import { requireRole } from '../../utils/require-role';

// Development mode bypass - remove this in production
const isDevelopment = import.meta.env.DEV;
let user, roles, operationsData;

if (isDevelopment) {
  // Development bypass with mock user
  console.log('ðŸš¨ Development mode: Using mock authentication');
  user = { id: 'dev-mock-user-id' };
  roles = ['laundromat_staff'];
  operationsData = await getLaundromatOperationsData(user.id);
} else {
  // Production authentication
  try {
    const authResult = await requireRole(Astro.cookies, ['laundromat_staff', 'admin']);
    user = authResult.user;
    roles = authResult.roles;
    operationsData = await getLaundromatOperationsData(user.id);
  } catch (error) {
    // Handle authentication/authorization errors
    if (error instanceof Response) {
      return error;
    }
    throw new Error('Authentication failed');
  }
}

// Fallback data for development if no laundromat found
const { 
  laundromat = { name: 'Demo Laundromat', today_orders: 0, max_daily_orders: 50 },
  todayOrders = [],
  ordersByStatus = { pickupQueue: [], processing: [], readyForDelivery: [], onTrack: 0, atRisk: 0, late: 0 },
  todayStats = { totalOrders: 0, completedOrders: 0, totalWeight: 0, averageWeight: 0 },
  revenueToday = 0
} = operationsData;

const pageTitle = `${laundromat.name} - Operations Dashboard`;
---

<Layout title={pageTitle}>
  <!-- Header -->
  <header class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">{laundromat.name}</h1>
          <p class="text-sm text-gray-600">Operations Dashboard</p>
        </div>
        <div class="flex items-center space-x-4">
          <div class="text-sm text-gray-600">
            <span class="font-medium">Capacity:</span>
            <span class="ml-1">{laundromat.today_orders || 0} / {laundromat.max_daily_orders}</span>
          </div>
          <a href="/auth/logout" class="text-red-600 hover:text-red-800 text-sm">Logout</a>
        </div>
      </div>
    </div>
  </header>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <!-- Operations Command Center -->
    <div class="bg-white rounded-lg shadow-sm border mb-6 p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Today's Overview</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Total Orders -->
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600">{todayStats.totalOrders}</div>
          <div class="text-sm text-gray-600">Total Orders</div>
        </div>
        
        <!-- Status Breakdown -->
        <div class="text-center">
          <div class="text-lg font-semibold text-gray-900">
            <span class="text-green-600">ðŸŸ¢ {ordersByStatus.onTrack || 0}</span> |
            <span class="text-yellow-600">ðŸŸ¡ {ordersByStatus.atRisk || 0}</span> |
            <span class="text-red-600">ðŸ”´ {ordersByStatus.late || 0}</span>
          </div>
          <div class="text-sm text-gray-600">On Track | At Risk | Late</div>
        </div>

        <!-- Capacity Status -->
        <div class="text-center">
          <div class="text-2xl font-bold" class={`${(laundromat.today_orders || 0) / laundromat.max_daily_orders > 0.8 ? 'text-orange-600' : 'text-green-600'}`}>
            {Math.round(((laundromat.today_orders || 0) / laundromat.max_daily_orders) * 100)}%
          </div>
          <div class="text-sm text-gray-600">Capacity Used</div>
        </div>

        <!-- Today's Revenue -->
        <div class="text-center">
          <div class="text-2xl font-bold text-green-600">${revenueToday.toFixed(2)}</div>
          <div class="text-sm text-gray-600">Revenue Today</div>
        </div>
      </div>
    </div>

    <!-- Order Queue -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Scheduled/Pickup Queue -->
      <div class="bg-white rounded-lg shadow-sm border">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">
            Pickup Queue ({ordersByStatus.pickupQueue?.length || 0})
          </h3>
        </div>
        <div class="p-4 space-y-3 max-h-96 overflow-y-auto">
          {ordersByStatus.pickupQueue?.map((order) => (
            <div class="border rounded-lg p-4 hover:bg-gray-50">
              <div class="flex justify-between items-start">
                <div>
                  <div class="font-medium">Order #{order.id.slice(-8)}</div>
                  <div class="text-sm text-gray-600">{order.pickup_date}</div>
                  <div class="text-sm text-blue-600">{order.status.replace('_', ' ')}</div>
                </div>
                <div class="text-right">
                  <div class="text-sm font-medium">{order.customer?.full_name || 'Guest'}</div>
                  <div class="text-sm text-gray-600">{order.service_type}</div>
                </div>
              </div>
              <div class="mt-3 flex space-x-2">
                <button 
                  onclick={`updateOrderStatus('${order.id}', 'picked_up')`}
                  class="bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700"
                >
                  Mark Picked Up
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Processing Queue -->
      <div class="bg-white rounded-lg shadow-sm border">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">
            In Process ({ordersByStatus.processing?.length || 0})
          </h3>
        </div>
        <div class="p-4 space-y-3 max-h-96 overflow-y-auto">
          {ordersByStatus.processing?.map((order) => (
            <div class="border rounded-lg p-4 hover:bg-gray-50">
              <div class="flex justify-between items-start">
                <div>
                  <div class="font-medium">Order #{order.id.slice(-8)}</div>
                  <div class="text-sm text-gray-600">Weight: {order.measured_weight_lb || 'TBD'} lbs</div>
                  <div class="text-sm text-yellow-600">Processing</div>
                </div>
                <div class="text-right">
                  <div class="text-sm font-medium">{order.customer?.full_name || 'Guest'}</div>
                  <div class="text-sm text-gray-600">
                    {order.picked_up_at ? 
                      `Picked up ${new Date(order.picked_up_at).toLocaleTimeString()}` : 
                      'Recently started'
                    }
                  </div>
                </div>
              </div>
              <div class="mt-3 flex space-x-2">
                <button 
                  onclick={`updateOrderStatus('${order.id}', 'ready_for_delivery')`}
                  class="bg-green-600 text-white px-3 py-1 rounded text-sm hover:bg-green-700"
                >
                  Mark Ready
                </button>
                <button 
                  onclick={`adjustWeight('${order.id}')`}
                  class="bg-gray-600 text-white px-3 py-1 rounded text-sm hover:bg-gray-700"
                >
                  Adjust Weight
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Ready for Delivery -->
      <div class="bg-white rounded-lg shadow-sm border">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">
            Ready for Delivery ({ordersByStatus.readyForDelivery?.length || 0})
          </h3>
        </div>
        <div class="p-4 space-y-3 max-h-96 overflow-y-auto">
          {ordersByStatus.readyForDelivery?.map((order) => (
            <div class="border rounded-lg p-4 hover:bg-gray-50">
              <div class="flex justify-between items-start">
                <div>
                  <div class="font-medium">Order #{order.id.slice(-8)}</div>
                  <div class="text-sm text-gray-600">Weight: {order.measured_weight_lb} lbs</div>
                  <div class="text-sm text-green-600">Ready for pickup</div>
                </div>
                <div class="text-right">
                  <div class="text-sm font-medium">{order.customer?.full_name || 'Guest'}</div>
                  <div class="text-sm text-gray-600">{order.delivery_date || 'Today'}</div>
                </div>
              </div>
              <div class="mt-3 flex space-x-2">
                <button 
                  onclick={`updateOrderStatus('${order.id}', 'en_route_delivery')`}
                  class="bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700"
                >
                  Out for Delivery
                </button>
                <a 
                  href={`/laundromat/orders/${order.id}`}
                  class="bg-gray-600 text-white px-3 py-1 rounded text-sm hover:bg-gray-700 inline-block"
                >
                  Details
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-6 bg-white rounded-lg shadow-sm border p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <a href="/laundromat/orders" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-center">
          View All Orders
        </a>
        <a href="/laundromat/revenue" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 text-center">
          Revenue Report
        </a>
        <a href="/laundromat/settings" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 text-center">
          Settings
        </a>
        <button onclick="refreshDashboard()" class="bg-orange-600 text-white px-4 py-2 rounded hover:bg-orange-700">
          Refresh Data
        </button>
      </div>
    </div>
  </div>

  <!-- JavaScript for interactions -->
  <script>
    async function updateOrderStatus(orderId, newStatus) {
      try {
        const response = await fetch(`/api/laundromat/orders/${orderId}/status`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ status: newStatus })
        });

        if (response.ok) {
          location.reload(); // Refresh to show updated status
        } else {
          const error = await response.json();
          alert(`Error updating order: ${error.message}`);
        }
      } catch (error) {
        alert(`Error: ${error.message}`);
      }
    }

    async function adjustWeight(orderId) {
      const newWeight = prompt('Enter actual weight in pounds:');
      if (newWeight && !isNaN(newWeight)) {
        try {
          const response = await fetch(`/api/laundromat/orders/${orderId}/weight`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ weight: parseFloat(newWeight) })
          });

          if (response.ok) {
            location.reload();
          } else {
            const error = await response.json();
            alert(`Error updating weight: ${error.message}`);
          }
        } catch (error) {
          alert(`Error: ${error.message}`);
        }
      }
    }

    function refreshDashboard() {
      location.reload();
    }

    // Auto-refresh every 2 minutes
    setInterval(refreshDashboard, 120000);
  </script>
</Layout>