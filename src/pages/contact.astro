---
import Layout from '../layout/Layout.astro';

// SEO Meta
const title = "Contact Us | Laundry Pickup & Delivery Support | Bags of Laundry";
const description = "Get in touch with Bags of Laundry. Call (855) WASH-BAGS for customer support, partnership inquiries, or commercial services. Available 7 days a week.";

// Contact info
const phoneNumber = "(855) WASH-BAGS";
const phoneNumberDigits = "+18559274224";
const email = "bagsoflaundry@gmail.com";
const hours = "Monday - Sunday: 6:00 AM - 10:00 PM EST";
---

<Layout title={title} description={description}>
  <main>
    <!-- HERO -->
    <section class="py-16 lg:py-20 bg-gradient-to-br from-orange-50 via-white to-blue-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <div class="inline-block bg-brand-primary text-white rounded-full px-4 py-2 text-sm font-bold mb-6">
            We're Here to Help
          </div>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black text-brand-text mb-6">Get in Touch</h1>
          <p class="text-xl sub leading-relaxed mb-8">
            Whether you're a customer with questions about your order or a laundromat owner interested in partnering with us, we'd love to hear from you.
          </p>

          <!-- Primary Contact Info -->
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-8">
            <a href={`tel:${phoneNumberDigits}`} class="flex items-center gap-3 text-2xl font-bold text-brand-primary hover:text-brand-primaryDeep transition">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span>{phoneNumber}</span>
            </a>
            <span class="text-gray-400 hidden sm:block">|</span>
            <a href={`mailto:${email}`} class="flex items-center gap-3 text-lg text-brand-text hover:text-brand-primary transition">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span>{email}</span>
            </a>
          </div>

          <p class="sub text-sm">
            <svg class="w-4 h-4 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            {hours}
          </p>
        </div>
      </div>
    </section>

    <!-- CONTACT FORM & INFO -->
    <section class="py-16 lg:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12">

          <!-- Contact Form -->
          <div>
            <h2 class="text-3xl font-black text-brand-text mb-6">Send Us a Message</h2>
            <div class="card p-8">
              <form name="contact" method="POST" data-netlify="true" class="space-y-6">
                <input type="hidden" name="form-name" value="contact" />

                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label for="firstName" class="block text-sm font-bold text-brand-text mb-2">First Name *</label>
                    <input
                      type="text"
                      id="firstName"
                      name="firstName"
                      required
                      class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-4 focus:ring-brand-primary/20 focus:border-brand-primary"
                    />
                  </div>
                  <div>
                    <label for="lastName" class="block text-sm font-bold text-brand-text mb-2">Last Name *</label>
                    <input
                      type="text"
                      id="lastName"
                      name="lastName"
                      required
                      class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-4 focus:ring-brand-primary/20 focus:border-brand-primary"
                    />
                  </div>
                </div>

                <div>
                  <label for="email" class="block text-sm font-bold text-brand-text mb-2">Email Address *</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-4 focus:ring-brand-primary/20 focus:border-brand-primary"
                  />
                </div>

                <div>
                  <label for="phone" class="block text-sm font-bold text-brand-text mb-2">Phone Number</label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-4 focus:ring-brand-primary/20 focus:border-brand-primary"
                  />
                </div>

                <div>
                  <label for="subject" class="block text-sm font-bold text-brand-text mb-2">Subject *</label>
                  <select
                    id="subject"
                    name="subject"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-4 focus:ring-brand-primary/20 focus:border-brand-primary"
                  >
                    <option value="">Select a subject...</option>
                    <option value="general">General Inquiry</option>
                    <option value="order-support">Order Support</option>
                    <option value="partnership">Partnership Inquiry</option>
                    <option value="commercial">Commercial Services</option>
                    <option value="feedback">Feedback</option>
                    <option value="other">Other</option>
                  </select>
                </div>

                <div>
                  <label for="message" class="block text-sm font-bold text-brand-text mb-2">Message *</label>
                  <textarea
                    id="message"
                    name="message"
                    rows="5"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-4 focus:ring-brand-primary/20 focus:border-brand-primary"
                  ></textarea>
                </div>

                <button type="submit" class="btn w-full text-lg py-4">Send Message</button>

                <p class="text-xs text-gray-500 text-center">
                  We typically respond within 24 hours during business days.
                </p>
              </form>
            </div>
          </div>

          <!-- Contact Info Cards -->
          <div>
            <h2 class="text-3xl font-black text-brand-text mb-6">Other Ways to Reach Us</h2>

            <div class="space-y-6">
              <!-- Phone Card -->
              <div class="card p-6">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 h-12 w-12 rounded-xl bg-brand-primary/10 flex items-center justify-center">
                    <svg class="w-6 h-6 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h3 class="font-bold text-brand-text mb-2">Call or Text</h3>
                    <a href={`tel:${phoneNumberDigits}`} class="text-2xl font-bold text-brand-primary hover:underline block mb-1">{phoneNumber}</a>
                    <p class="sub text-sm">Available 7 days a week<br/>{hours}</p>
                  </div>
                </div>
              </div>

              <!-- Email Card -->
              <div class="card p-6">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 h-12 w-12 rounded-xl bg-brand-primary/10 flex items-center justify-center">
                    <svg class="w-6 h-6 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h3 class="font-bold text-brand-text mb-2">Email Us</h3>
                    <a href={`mailto:${email}`} class="text-brand-primary hover:underline font-semibold block mb-1">{email}</a>
                    <p class="sub text-sm">We respond within 24 hours</p>
                  </div>
                </div>
              </div>

              <!-- Service Area Card -->
              <div class="card p-6">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 h-12 w-12 rounded-xl bg-brand-primary/10 flex items-center justify-center">
                    <svg class="w-6 h-6 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h3 class="font-bold text-brand-text mb-2">Service Area</h3>
                    <p class="sub text-sm mb-2">Detroit & Metro suburbs within ~30 miles</p>
                    <a href="/service-areas" class="text-brand-primary hover:underline text-sm font-semibold">View All Service Areas →</a>
                  </div>
                </div>
              </div>

              <!-- Track Order Card -->
              <div class="card p-6 bg-gradient-to-br from-blue-50 to-indigo-50 border-blue-200">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 h-12 w-12 rounded-xl bg-blue-600 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h3 class="font-bold text-brand-text mb-2">Have an Active Order?</h3>
                    <p class="sub text-sm mb-3">Track your order status and view details in your dashboard</p>
                    <a href="/dashboard" class="btn-alt">Go to Dashboard</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- QUICK LINKS -->
    <section class="py-16 lg:py-20 bg-brand-bg">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title text-center text-brand-text mb-12">Looking for Something Specific?</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">

          <a href="/laundromat-partners" class="card p-6 hover:shadow-xl transition group">
            <div class="inline-block p-3 rounded-lg bg-orange-100 mb-4">
              <svg class="w-8 h-8 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="font-bold text-brand-text mb-2 group-hover:text-brand-primary transition">Partnership Opportunities</h3>
            <p class="sub text-sm">Laundromat owners: Learn how to partner with us</p>
          </a>

          <a href="/commercial-laundry" class="card p-6 hover:shadow-xl transition group">
            <div class="inline-block p-3 rounded-lg bg-red-100 mb-4">
              <svg class="w-8 h-8 text-brand-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <h3 class="font-bold text-brand-text mb-2 group-hover:text-brand-primary transition">Commercial Services</h3>
            <p class="sub text-sm">Bulk laundry for businesses & properties</p>
          </a>

          <a href="/pricing" class="card p-6 hover:shadow-xl transition group">
            <div class="inline-block p-3 rounded-lg bg-green-100 mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-bold text-brand-text mb-2 group-hover:text-brand-primary transition">Pricing & Plans</h3>
            <p class="sub text-sm">See our transparent pricing structure</p>
          </a>

          <a href="/how-it-works" class="card p-6 hover:shadow-xl transition group">
            <div class="inline-block p-3 rounded-lg bg-blue-100 mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-bold text-brand-text mb-2 group-hover:text-brand-primary transition">How It Works</h3>
            <p class="sub text-sm">Learn about our pickup & delivery process</p>
          </a>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-16 lg:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title text-center text-brand-text mb-12">Frequently Asked Questions</h2>
        <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">

          <div class="card p-6">
            <h3 class="text-lg font-bold text-brand-text mb-3">What's the best way to reach you?</h3>
            <p class="sub">For immediate assistance, call or text us at <strong>(855) WASH-BAGS</strong>. For non-urgent inquiries, email us at {email}.</p>
          </div>

          <div class="card p-6">
            <h3 class="text-lg font-bold text-brand-text mb-3">Do you offer customer support on weekends?</h3>
            <p class="sub">Yes! We're available 7 days a week from 6:00 AM to 10:00 PM EST to help with orders and questions.</p>
          </div>

          <div class="card p-6">
            <h3 class="text-lg font-bold text-brand-text mb-3">How quickly will I get a response?</h3>
            <p class="sub">Phone and text messages are answered immediately during business hours. Email inquiries receive a response within 24 hours.</p>
          </div>

          <div class="card p-6">
            <h3 class="text-lg font-bold text-brand-text mb-3">Can I schedule a pickup through this contact form?</h3>
            <p class="sub">For fastest scheduling, please use our <a href="/start-basic" class="text-brand-primary hover:underline font-semibold">online booking system</a> or call us directly.</p>
          </div>
        </div>
      </div>
    </section>

  </main>
</Layout>
